{
  "entryFile": "./src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*.route.ts"],
  "spec": {
    "host": "localhost:3000",
    "basePath": "v1",
    "outputDirectory": "./specs",
    "specFileBaseName": "openapi",
    "yaml": false,
    "specVersion": 3,
    "securityDefinitions": {
      "api_key": {
          "type": "apiKey",
          "name": "access_token",
          "in": "header"
      }
    }
  },
  "routes": {
    "esm": true,
    "basePath": "v1",
    "routesDir": "build",
    "authenticationModule": "src/index.ts"
  }
}
