  {
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node16",
		"lib": [
			"es2017",
			"es7",
			"es6"
		],
		"outDir": "./build",
		"declaration": true,
		"strict": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"test",
		"testing",
		"scripts",
		"examples",
		"docs"
	]
}
